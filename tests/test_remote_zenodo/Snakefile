from snakemake.remote.zenodo import RemoteProvider
import os

access_token=os.environ["ZENODO_SANDBOX_PAT"]
ZEN = RemoteProvider(access_token=access_token, sandbox=True)

rule download:
    input:
        ZEN.remote("upload.txt")
    output:
        "download.txt"
    shell:
        "cp {input} {output}"

rule upload:
    output: ZEN.remote("upload.txt")
    shell: "touch {output}"
